<Window x:Class="TestWPf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWPf"
        xmlns:custumer="clr-namespace:TestWPf.Constrolls"
        xmlns:helper="clr-namespace:TestWPf.Helpers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="custumer:CustomerTextBox" >
            <Style.Triggers>
                <Trigger Property="IsLighited" Value="False">
                    <Setter Property="Background" Value="Red" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" x:Name="button" Content="Button" HorizontalAlignment="Left" Click="button_Click" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <TextBox  Grid.Row="0" x:Name="textBox"  TextChanged="textBox_TextChanged" HorizontalAlignment="Left" Margin="160,37,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button  Grid.Row="1" x:Name="button1" Content="Button" HorizontalAlignment="Left" Click="button1_Click" Margin="10,89,0,0" VerticalAlignment="Top"/>
        <custumer:CustomerTextBox  helper:TextBoxHelper.Title="textboxTitle" x:Name="CustumerTextBlock1" Grid.Row="2" IsLighited="True" Text="{Binding RelativeSource={RelativeSource Self},Path=(helper:TextBoxHelper.Title)}"></custumer:CustomerTextBox>
        <StackPanel Grid.Row="3">
            <TextBox x:Name="box" Text="请输入"  helper:TextBoxHelper.MionitorTextChanged="True">
                
            </TextBox>
            <CheckBox IsChecked="{Binding ElementName=box,Path=(helper:TextBoxHelper.HasText),Mode=OneWay}">
                
            </CheckBox>
        </StackPanel>
    </Grid>
</Window>
